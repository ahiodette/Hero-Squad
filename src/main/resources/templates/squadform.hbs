{{#partial "content"}}
    <section class="landing-pg">
        <div class="land-left"></div>
        <div class="land-right"></div>

        <form class="form" action="/squad/new" method="post">
            <h1>Create Your Squad</h1>
            <label>Enter the squad name</label><br>
            <input type="text"  name="squadName" required>
            <label>Enter the max size</label><br>
            <input type="number" name="size" required>
            <label>Enter mission</label><br>
            <input type="text" name="cause" required>
            <input type="submit" class="btns">
        </form>

    </section>
{{/partial}}
